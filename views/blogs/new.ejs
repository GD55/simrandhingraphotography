<% include ../partials/header %>
<div class="container">
	<h1 class="heading">New Blog</h1>
	<div class="form">
		<form action="/blogs" method="POST">
			<div class="form-group">
				<label>Title :</label>
				<input class="form-control" type="text" name="blog[title]" placeholder="title">
			</div>
			<div class="form-group">
				<label>Image :</label>
				<input class="form-control" type="text" name="blog[image]" placeholder="image">
			</div>
			<div class="form-group">
				<label>Blog Content :</label>
				<textarea class="form-control" name="blog[body]" placeholder="Blog post goes here" rows="6"></textarea>
			</div>
			<input class="btn btn-lg btn-primary btn-block" type="submit" name="">
		</form>
	</div>
</div>
<% include ../partials/footer %>