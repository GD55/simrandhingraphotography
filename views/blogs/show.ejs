<% include ../partials/header %>
<div class="contain ">
	<h1 class="heading text-center"><%= blog.title %></h1>
	<div id="showBlogs" class="p-4 border rounded-lg shadow-lg m-3">
		<div class="text-center border-bottom ">
			<img class="img-fluid rounded mb-4 one-edge-shadow" src="<%= blog.image %>">
		</div>
		<div class="text-muted">
			<span><%= blog.created.toDateString() %></span>
		</div>
		<div id="blog-body" class="cursive text-justify mt-2">
			<p><%- blog.body %></p>
		</div>
		<% if(currentUser){ %>
		<form id="delete" action="/blogs/<%= blog._id%>?_method=DELETE" method="POST">
			<a class="btn btn-outline-warning" href="/blogs/<%= blog._id%>/edit">Edit</a>
			<button class="btn btn-outline-danger">DELETE</button>
		</form>
		<% } %>
	</div>
</div>
<% include ../partials/footer %>