<% include ../partials/header %>
<div class="container">
	<h1 class="heading">Edit <%= blog.title%></h1>
	<div class="form">
		<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<label>Title :</label>
				<input class="form-control" type="text" name="blog[title]" value="<%= blog.title%>">
			</div>
			<div class="form-group">
				<label>Image :</label>
				<input class="form-control" type="text" name="blog[image]" value="<%=blog.image%>">
			</div>
			<div class="form-group">
					<label>Created :</label>
					<input class="form-control" type="text" name="blog[created]" value="<%=blog.created%>">
				</div>
			<div class="form-group">
				<label>Blog Content :</label>
				<textarea class="form-control" name="blog[body]"
					placeholder="Blog post goes here" rows="6"><%=blog.body%></textarea>
			</div>
			<input class="btn btn-lg btn-primary btn-block" type="submit" name="">
		</form>
	</div>
</div>
<% include ../partials/footer %>