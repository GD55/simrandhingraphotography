<% include ../partials/header %>
<div class="container">
	<h1 class="heading">New Video</h1>
	<div class="form">
		<form action="/videos" method="POST">
			<div class="form-group">
				<label>Title :</label>
				<input class="form-control" type="text" name="video[title]" placeholder="title">
			</div>
			<div class="form-group">
				<label>Link :</label>
				<input class="form-control" type="text" name="video[link]" placeholder="link">
			</div>
			<div class="form-group">
				<label>Order :</label>
				<input class="form-control" type="number" name="video[order]" value="order">
			</div>
			<input class="btn btn-lg btn-primary btn-block" type="submit" name="">
		</form>
	</div>
</div>
