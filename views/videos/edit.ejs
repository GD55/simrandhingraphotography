<% include ../partials/header %>
<div class="container">
	<h1 class="heading">Edit <%= video.title%></h1>
	<div class="form">
		<form action="/videos/<%= video._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<label>Title :</label>
				<input class="form-control" type="text" name="video[title]" value="<%= video.title%>">
			</div>
			<div class="form-group">
				<label>Link :</label>
				<input class="form-control" type="text" name="video[link]" value="<%= video.link%>">
			</div>
			<div class="form-group">
				<label>Order :</label>
				<input class="form-control" type="number" name="video[order]" value="<%= video.order%>">
			</div>
			<input class="btn btn-lg btn-primary btn-block" type="submit" name="">
		</form>
	</div>
</div>
<% include ../partials/footer %>