<% include ./partials/header %>
<div class="contain">
    <div class="row">
        <div class="m-auto col-10 col-lg-6">
            <h1 class="heading">Models Wanted</h1>
            <div class="form">
                <form action="/modelsWanted" method="Post" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
                            </div>
                            <input class="form-control" type="text" name="name" placeholder="name" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-envelope"></i></span>
                            </div>
                            <input class="form-control" type="email" name="email" placeholder="e-mail" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i
                                        class="fas fa-mobile-alt"></i></span>
                            </div>
                            <input class="form-control" type="tel" name="no" placeholder="Phone no." required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i
                                        class="fas fa-calendar-alt"></i></span>
                            </div>
                            <input class="form-control" type="date" name="age" min="1919-12-31" max="2018-12-31"
                                required>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" multiple id="files"
                                aria-describedby="inputGroupFileAddon01" name="photos" accept="image/*,video/*"
                                required>
                            <label class="custom-file-label" for="files">Choose file</label>
                        </div>
                        <small class="form-text text-muted">
                            *You can upload multiple image/video files placed in a location locally by selecting
                            multiple images
                            while holding ctrl key.
                        </small><br>
                        <div id="selectedFiles" class="p-3"></div>
                    </div>
                    <label class="heading" for="careerCheckbox">Looking for career in:</label>
                    <div id="careerCheckbox" class="form-group">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" name="acting"
                                value="yes">
                            <label class="form-check-label" for="inlineCheckbox1">Acting and Films</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox2" name="modelling"
                                value="yes">
                            <label class="form-check-label" for="inlineCheckbox2">Fashion Modelling</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox3" name="ads" value="yes">
                            <label class="form-check-label" for="inlineCheckbox3">Print Ads</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fab fa-instagram"></i></span>
                            </div>
                            <input class="form-control" type="text" name="instagram" placeholder="Instagram id"
                                required>
                        </div>
                    </div>
                    <label class="heading" for="portfolio">Do you have a Portfolio?</label>
                    <div id="portfolio" class="form-group">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="portfolio" id="inlineRadio1" value="Yes"
                                required>
                            <label class="form-check-label" for="inlineRadio1">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="portfolio" id="inlineRadio2" value="No">
                            <label class="form-check-label" for="inlineRadio2">No</label>
                        </div>
                    </div>
                    <label class="heading" for="workExperience">Work Experience</label>
                    <div id="workExperience" class="form-group">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="workExperience" id="inlineRadio1"
                                value="Fresher" required>
                            <label class="form-check-label" for="inlineRadio1">Fresher</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="workExperience" id="inlineRadio2"
                                value="Experienced">
                            <label class="form-check-label" for="inlineRadio2">Experienced</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/js/mail.js"></script>
<% include ./partials/footer %>